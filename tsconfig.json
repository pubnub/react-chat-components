{
  "compilerOptions": {
    "declaration": true,
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", ".storybook/stories"],
  "exclude": ["node_modules", "build", "src/**/*.test.tsx"]
}
